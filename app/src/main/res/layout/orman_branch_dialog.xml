<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wit"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangular_radius_corner">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/branch_name_dialog"
                    android:layout_weight="1"
                    android:text="sdadadasdas"
                    android:layout_margin="5dp"
                    android:textColor="@color/green_text"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="right|center_vertical"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pin"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/branch_address_dialog"
                android:text="sdadadasdas"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center|center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/branch_phone_dialog"
                android:text="sdadadasdas"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center|center_vertical"/>


        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close"
        android:id="@+id/close_dialog"/>

</RelativeLayout>