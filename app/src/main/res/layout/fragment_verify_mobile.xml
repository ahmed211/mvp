<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.create_account.verify_mobile.VerifyMobileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo"
            android:padding="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edit_text_background">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/wit"
                android:id="@+id/mobile"
                android:hint="@string/enter_mobile"
                android:gravity="right|center"
                android:inputType="number"
                android:paddingRight="10dp"
                android:singleLine="true"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:src="@drawable/mobile"
                />

        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/rectangular_radius_corner"
            android:backgroundTint="@color/light"
            android:id="@+id/mobile_search"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:text="ابحث"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/wit"
            android:textStyle="bold"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/rectangular_radius_corner"
            android:backgroundTint="@color/light"
            android:id="@+id/create_account"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:text="انشاء حساب جدبد"
            android:textSize="25dp"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/wit"
            android:textStyle="bold"/>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/user_recycler">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>