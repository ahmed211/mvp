<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".ui.create_account.SignUpFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:layout_marginTop="20dp"
           android:src="@drawable/logo"
           android:padding="20dp"/>
       
       
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:orientation="horizontal"
           android:layout_marginRight="15dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="15dp"
           android:background="@drawable/edit_text_background">

           <EditText
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:backgroundTint="@color/wit"
               android:id="@+id/name"
               android:hint="الاسم بالكامل"
               android:gravity="right|center"
               android:paddingRight="10dp"
               android:singleLine="true"
               />
           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="@color/border"/>
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:padding="10dp"
               android:src="@drawable/profile_icon"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:orientation="horizontal"
           android:layout_marginRight="15dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="15dp"
           android:background="@drawable/edit_text_background">

           <EditText
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:backgroundTint="@color/wit"
               android:id="@+id/mobile"
               android:inputType="number"
               android:hint="رقم الموبايل"
               android:gravity="right|center"
               android:singleLine="true"
               android:paddingRight="10dp"
               />
           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="@color/border"/>
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:padding="10dp"
               android:src="@drawable/mobile"
               />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:orientation="horizontal"
           android:layout_marginRight="15dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="15dp"
           android:background="@drawable/edit_text_background">

           <EditText
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:backgroundTint="@color/wit"
               android:id="@+id/phone"
               android:hint="*اختياري* الرقم الارضي"
               android:gravity="right|center"
               android:singleLine="true"
               android:paddingRight="10dp"
               android:inputType="number"
               />
           <View
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:background="@color/border"/>
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:padding="10dp"
               android:src="@drawable/phone"
               />

       </LinearLayout>
       
       <Button
           android:layout_width="200dp"
           android:layout_height="60dp"
           android:background="@drawable/rectangular_radius_corner"
           android:backgroundTint="@color/light"
           android:id="@+id/next"
           android:layout_gravity="center"
           android:layout_marginTop="25dp"
           android:drawableRight="@drawable/arrow_icon"
           android:paddingRight="10dp"
           android:text="التالي"
           android:textSize="25dp"
           android:paddingLeft="10dp"
           android:textColor="@color/wit"
           android:textStyle="bold"/>


   </LinearLayout>
</ScrollView>